<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/horizontal_margin"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/noSavedMoviesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/margin_top_huge"
        android:visibility="gone"
        android:text="@string/you_have_not_saved_any_movie_yet"
        android:textSize="@dimen/item_movie_list_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedMovieListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_movie_without_description" />

</FrameLayout>